{
    "name": "jt782/require-read-terms-php",
    "description": "Display modal for \"terms and conditions\", and require user read (scroll to bottom) and agree to those terms before submitting form.",
    "keywords": [
        "782 Media, LLC.",
        "require-read-terms-php"
    ],
    "homepage": "https://github.com/jt782/require-read-terms-php",
    "license": "MIT",
    "authors": [
        {
            "name": "John Todd",
            "email": "john@782media.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Seven82Media\\RequireReadTerms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Seven82Media\\RequireReadTerms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
